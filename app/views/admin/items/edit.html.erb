<%= form_with model:@item, url:admin_item_path, local:true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :introduction %>
    <%= f.text_field :introduction %>
    <%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] } %>
    <%= f.label :price, "価格" %>
    <%= f.number_field :price %>
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, '販売中', value: true %>
    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active, '販売停止中', value: false %>
    <%= f.submit '保存' %>
<% end %>