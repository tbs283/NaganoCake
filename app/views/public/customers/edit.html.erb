<%= form_with  model:@customer, url:customer_path, local:true do |f| %>
    <div class="field">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
    </div>
  <div class="field">
    <%= f.label :last_name_kana %>
    <%= f.text_field :last_name_kana %>
    <%= f.label :first_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
  </div>
  
  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  
  <div class="field">
    <%= f.label :telephone_number %>
    <%= f.text_field :telephone_number %>
  </div>
  
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>